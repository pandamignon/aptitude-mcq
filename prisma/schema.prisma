// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  uid      Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String 
  take     take[]
}

model career {
  careerid       String           @id @default(uuid())
  name           String
  career_subject career_subject[]
}

model career_subject {
  id            String          @id @default(uuid())
  title         String
  career        career          @relation(fields: [careerid], references: [careerid])
  careerid      String
  quiz_question quiz_question[]
  take          take[]
}

model quiz_question {
  questionid       Int
  question         String
  answer           String[]
  correct_answer   String
  level            level           @relation(fields: [levelid], references: [levelid])
  levelid          String
  career_subject   career_subject? @relation(fields: [career_subjectId], references: [id])
  career_subjectId String
  @@id([career_subjectId, levelid, questionid])
}

model level {
  levelid       String          @id @default(uuid())
  title         String
  quiz_question quiz_question[]
}

model take {
  id               String          @id @default(uuid())
  rank             Int
  status           String
  testDate         String
  question_medium  Int[]
  question_hard    Int[]
  question_easy    Int[]
  level_path       String[]
  user             user            @relation(fields: [userId], references: [uid])
  userId           Int
  career_subject   career_subject? @relation(fields: [career_subjectId], references: [id])
  career_subjectId String?
}
